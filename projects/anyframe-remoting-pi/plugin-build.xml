<?xml version="1.0" encoding="UTF-8" ?>
<plugin name="remoting" description="Remoting Plugin consists of sample code that provides basic guidelines on how to use HTTP Invoker among Remoting services supported by Spring, and reference libraries needed to use these open sources.">
	<groupId>org.anyframe.plugin</groupId>
	<artifactId>anyframe-remoting-pi</artifactId>
	<version>1.0.2</version>
	<dependent-plugins>
		<dependent-plugin name="query" version="2.0.0&gt;*" />
	</dependent-plugins>
	<resources>
		<resource dir="src/main/java" filtered="true" packaged="true">
			<include name="**/*.java" />
		</resource>
		<resource dir="src/main/resources" filtered="true" packaged="false">
			<include name="**/*.xml" />
		</resource>
		<resource dir="src/test/java" filtered="true" packaged="true">
			<include name="**/*.java" />
		</resource>
		<resource dir="src/test/resources" filtered="true" packaged="false">
			<include name="**/*.xml" />
		</resource>
		<resource dir="src/main/webapp/WEB-INF/jsp" filtered="false" packaged="false">
			<include name="**/*.jsp" />
		</resource>
	</resources>
	<build>
		<filesets>
			<fileset dir="src/main/java" filtered="true" packaged="true">
				<include name="**/org/anyframe/plugin/remoting/**/*.java" />
			</fileset>
			<fileset dir="src/main/resources" filtered="true" packaged="false">
				<include name="**/*remoting*.xml" />
			</fileset>
			<fileset dir="src/test/java" filtered="true" packaged="true">
				<include name="**/org/anyframe/plugin/remoting/**/*.java" />
			</fileset>
			<fileset dir="src/test/resources" filtered="true" packaged="false">
				<include name="**/*remoting*.xml" />
			</fileset>
			<fileset dir="src/main/webapp" filtered="false" packaged="false">
				<include name="**/remoting/**/*.*" />
				<include name="**/web.xml" />
				<include name="**/anyframe.jsp" />
			</fileset>
			<fileset dir="db" filtered="false" packaged="false">
				<include name="**/*.xml" />
			</fileset>
		</filesets>
	</build>
	<samples>true</samples>
	<essential>false</essential>
	<checked>false</checked>
</plugin>