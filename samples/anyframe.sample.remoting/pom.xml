  <build> 
    <plugins>                 
      
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
          <fork>true</fork>
          <executable>${JAVA_HOME}/bin/javac</executable>                    
          <compilerVersion>1.5</compilerVersion>          
          <meminitial>512m</meminitial>
          <maxmem>1024m</maxmem>       
          <encoding>UTF-8</encoding>             
          <testExcludes>
              <exclude>**/package-info.java</exclude>
          </testExcludes>
        </configuration>
        <dependencies>
          <dependency>
            <groupId>org.codehaus.plexus</groupId>
            <artifactId>plexus-utils</artifactId>
            <version>1.5.1</version>
          </dependency>
        </dependencies>        
      </plugin>
      
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <phase>test-compile</phase>
            <configuration>
              <tasks>            
            		<javac debug="true" srcdir="${basedir}/src/test/java" 
            		       destdir="${project.build.directory}/test-classes" fork="yes" memoryMaximumSize="256m" encoding="UTF-8">
            		       <classpath>
                				<path refid="maven.compile.classpath" />
                			</classpath>
            		</javac>               
              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>       
        <configuration>
          <skip>false</skip>              
          <forkMode>pertest</forkMode>
          <argLine>-Xmx1024m</argLine>      
          <!--
          <includes>
            <include>**/JaxRsServerFactoryTest.java</include>                        
          </includes>          
          -->
          <excludes>
            <exclude>**/Abstract*Test.java</exclude>
            <exclude>**/RemotingSpringTestCase.java</exclude>       
            <exclude>**/RemotingTestCase.java</exclude>
          </excludes>     
          <jvm>${JAVA_HOME}/bin/java</jvm>
        </configuration>
      </plugin>
      
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-report-plugin</artifactId>               
        <configuration>
          <outputDirectory>
            ${artifactsDir}/junit
          </outputDirectory>                            
        </configuration>
        <executions>
          <execution>
            <phase>test</phase>
            <goals>
              <goal>report</goal>
            </goals>
          </execution>
        </executions>               
       </plugin>       
       
    </plugins>    
  </build> 


